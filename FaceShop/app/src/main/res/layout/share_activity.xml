<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"
            android:id="@+id/share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/share_title"
            android:id="@+id/share_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_below="@+id/share_show"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"
            android:background="@color/background"
            android:scaleType="centerInside"
            android:id="@+id/save_phone"
            android:layout_width="200dp"
            android:layout_height="140dp" />

        <ImageButton
            android:layout_below="@+id/save_phone"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"
            android:background="@color/background"
            android:scaleType="centerInside"
            android:id="@+id/share_qq"
            android:layout_width="200dp"
            android:layout_height="140dp" />

        <ImageButton
            android:layout_below="@id/share_qq"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"
            android:background="@color/background"
            android:scaleType="centerInside"
            android:id="@+id/share_wechat"
            android:layout_width="200dp"
            android:layout_height="140dp" />
    </RelativeLayout>

    
</LinearLayout>